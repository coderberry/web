<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Code Sponsor</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application' %>

    <%= yield :head %>
  </head>

  <%= content_tag :body,
        class: "app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden #{ body_class } #{ yield :extra_body_classes }",
        data: {
          environment: Rails.env
        } do %>

    <header class="app-header navbar">
      <button class="navbar-toggler mobile-sidebar-toggler d-lg-none" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#"></a>
      <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>
      <ul class="nav navbar-nav d-md-down-none mr-auto">
      </ul>
    </header>

    <div class="app-body">
      <div class="sidebar">
        <nav class="sidebar-nav">
          <ul class="nav">
            <li class="nav-item">
              <%= active_link_to root_path, class: "nav-link", active: :exclusive do %>
                <span class="fa-wrapper"><%= icon("fas", "tachometer-alt") %></span>
                Dashboard
              <% end %>
            </li>
            <li class="nav-item">
              <%= active_link_to properties_path, class: "nav-link" do %>
                <span class="fa-wrapper"><%= icon("fas", "globe") %></span>
                Properties
              <% end %>
            </li>
            <li class="nav-item">
              <%= active_link_to sponsors_path, class: "nav-link" do %>
                <span class="fa-wrapper"><%= icon("fas", "handshake") %></i></span>
                Sponsors
              <% end %>
            </li>
            <li class="nav-item">
              <%= active_link_to campaigns_path, class: "nav-link" do %>
                <span class="fa-wrapper"><%= icon("fas", "bullhorn") %></span>
                Campaigns
              <% end %>
            </li>
            <li class="nav-item">
              <%= active_link_to "/distributions", class: "nav-link" do %>
                <span class="fa-wrapper"><%= icon("fas", "money-bill-alt") %></span>
                Distributions
              <% end %>
            </li>
            <li class="nav-item">
              <%= active_link_to edit_user_registration_path, class: "nav-link" do %>
                <span class="fa-wrapper"><%= icon("fas", "user") %></span>
                Profile
              <% end %>
            </li>
          </ul>
        </nav>
        <button class="sidebar-minimizer brand-minimizer" type="button"></button>
      </div>
      <!-- Main content -->
      <main class="main">
        <%= yield %>
      </main>
    </div>

    <footer class="app-footer">
      <span>&copy; 2018 <a href="https://consensys.net">Consensus Systems</a></span>
      <span class="ml-auto">Powered by <a href="https://github.com/codesponsor/code_sponsor">Open Source</a></span>
    </footer>

    <%= component "flash", flash: flash %>

    <% if ::Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-102162972-2', 'auto');
        ga('send', 'pageview');
      </script>
    <% end %>
  <% end %>
</html>