<%= breadcrumbs({
  items: [
    ["Home", nil],
    ["Campaigns", nil]
  ],
  actions: [
    ["Create Campaign", new_campaign_path, "plus"]
  ]
}) %>

<div class="container-fluid">
  <div class="card">
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th class="text-center">Status</th>
            <th class="text-center">Bid</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @campaigns.each do |campaign| %>
            <tr>
              <td><%= campaign.name %></td>
              <td class="text-center"><%= ::Campaign::STATUSES[campaign.status].humanize.titleize %></td>
              <td class="text-center"><%= campaign.bid_amount.format %></td>
              <td class="text-right p-2">
                <%= link_to 'Show', campaign, class: "btn btn-outline-info btn-sm" %>
                <%= link_to 'Edit', edit_campaign_path(campaign), class: "btn btn-outline-primary btn-sm" %>
                <%= link_to 'Delete', campaign, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>